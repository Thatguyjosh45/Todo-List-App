        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

        <style>
            /* Body styling */
            body {
                background-image: url("https://img.freepik.com/free-vector/background-wave-minimalist-modern-style_483537-5220.jpg?size=626&ext=jpg&ga=GA1.1.2008272138.1726272000&semt=ais_hybrid");
                background-size: cover;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
            }

            /* Centered container box */
            .container {
                background-color: white;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 300px;
                text-align: center;
                display: flex;
                flex-direction: column;
            }

            /* Heading styling */
            h1 {
                font-size: 24px;
                color: #333;
                text-align: left; /* Align text to the left */
                margin: 0;
                padding: 0;
            }

            /* Task input field and button container */
            .task-container {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
            }

            input[type="text"] {
                width: 80%;
                padding: 10px;
                margin-right: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                box-sizing: border-box;
            }

            /* Plus button styling */
            #addTaskBtn {
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                font-size: 20px;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            #addTaskBtn:hover {
                background-color: #45a049;
            }

            /* Task list styling */
            #myUL {
                list-style-type: none;
                padding: 0;
                margin: 0;
                text-align: left;
            }

            li {
                padding: 10px;
                margin: 5px 0;
                background-color: #f4f4f4;
                border-radius: 4px;
                cursor: pointer;
                position: relative;
            }

            li:hover {
                background-color: #ddd;
            }

            /* Trash can icon styling */
            .trash-icon {
                position: absolute;
                right: 10px;
                top: 10px;
                font-size: 18px;
                color: #e74c3c;
                opacity: 0;
                transition: opacity 0.2s;
                cursor: pointer;
            }

            li:hover .trash-icon {
                opacity: 1;
            }

            /* Footer with task count and clear button */
            .footer {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 20px;
                font-size: 14px;
            }

            /* Clear All button styling */
            #clearAllBtn {
                padding: 5px 10px;
                border: none;
                background-color: #4CAF50;
